<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10sp"
    tools:context=".ProfilesSearch">

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5sp"
            android:src="@drawable/p77"
            app:shapeAppearanceOverlay="@style/roundeimageview"
            app:strokeColor="@color/gray_claro"
            app:strokeWidth="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/outfit_bold"
            android:text="@string/searcUser1"
            android:maxLines="1"
            android:maxLength="10"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5sp"
            android:src="@drawable/p6"
            app:shapeAppearanceOverlay="@style/roundeimageview"
            app:strokeColor="@color/gray_claro"
            app:strokeWidth="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:maxLength="10"
            android:fontFamily="@font/outfit_bold"
            android:text="@string/searcUser2"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>