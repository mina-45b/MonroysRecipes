<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_gravity="center"
tools:context=".newPassword">

<ImageButton
    android:id="@+id/btnBack1"
    android:layout_width="54dp"
    android:layout_height="54dp"
    android:backgroundTint="@color/white"
    android:src="@drawable/resource_return"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    android:contentDescription="@string/back"/>

<TextView
    android:id="@+id/forgot_p"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/outfit_bold"
    android:gravity="center"
    android:text="@string/register_t"
    android:textSize="32sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.19" />

<EditText
    android:id="@+id/password"
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/register_rectangle"
    android:fontFamily="@font/outfit_bold"
    android:hint="@string/register_t"
    android:padding="10sp"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="@+id/introduction2"
    app:layout_constraintStart_toStartOf="@+id/introduction2"
    app:layout_constraintTop_toBottomOf="@+id/introduction2" />

<Button
    android:id="@+id/btnConfirm"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:background="@drawable/rounded_button"
    android:fontFamily="@font/outfit_bold"
    android:gravity="center"
    android:text="@string/newPassword1"
    app:layout_constraintEnd_toEndOf="@+id/textView5"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="@+id/textView5"
    app:layout_constraintTop_toBottomOf="@+id/textView5" />

<EditText
    android:id="@+id/textView5"
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/register_rectangle"
    android:hint="@string/register_th"
    android:fontFamily="@font/outfit_bold"
    android:padding="10sp"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="@+id/password"
    app:layout_constraintStart_toStartOf="@+id/password"
    app:layout_constraintTop_toBottomOf="@+id/password" />

<TextView
    android:id="@+id/introduction2"
    android:layout_width="240dp"
    android:layout_height="55dp"
    android:layout_marginTop="8dp"
    android:fontFamily="@font/outfit_light"
    android:gravity="center"
    android:text="@string/newPassword"
    android:textAlignment="center"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="@+id/forgot_p"
    app:layout_constraintStart_toStartOf="@+id/forgot_p"
    app:layout_constraintTop_toBottomOf="@+id/forgot_p" />


</androidx.constraintlayout.widget.ConstraintLayout>