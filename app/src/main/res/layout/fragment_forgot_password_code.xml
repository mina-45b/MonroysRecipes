<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordCode">

    <ImageButton
        android:id="@+id/btnBack2"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/resource_return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="@string/back"/>


    <TextView
        android:id="@+id/forgot_p"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:fontFamily="@font/outfit_bold"
        android:gravity="center"
        android:text="@string/verifyCode"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/introduction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/outfit_light"
        android:gravity="center"
        android:text="@string/enterCode"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_p"
        app:layout_constraintStart_toStartOf="@+id/forgot_p"
        app:layout_constraintTop_toBottomOf="@+id/forgot_p" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:layout_constraintEnd_toEndOf="@+id/introduction2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/introduction2"
        app:layout_constraintTop_toBottomOf="@+id/introduction2">

        <EditText
            android:id="@+id/code1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20sp"
            android:background="@drawable/code_rectangle"
            android:fontFamily="@font/outfit_bold"
            android:hint="@string/code"
            android:padding="10sp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_flexGrow="1"
            app:layout_flexShrink="1"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp" />

        <EditText
            android:id="@+id/code2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20sp"
            android:layout_marginTop="50dp"
            android:background="@drawable/code_rectangle"
            android:fontFamily="@font/outfit_bold"
            android:hint="@string/code"
            app:layout_flexGrow="1"
            app:layout_flexShrink="1"
            android:padding="10sp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/code3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20sp"
            android:layout_marginTop="50dp"
            android:background="@drawable/code_rectangle"
            android:fontFamily="@font/outfit_bold"
            android:hint="@string/code"
            app:layout_flexGrow="1"
            app:layout_flexShrink="1"
            android:padding="10sp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/code4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20sp"
            android:layout_marginTop="50dp"
            android:background="@drawable/code_rectangle"
            android:fontFamily="@font/outfit_bold"
            android:hint="@string/code"
            app:layout_flexGrow="1"
            app:layout_flexShrink="1"
            android:padding="10sp"
            android:textAlignment="center"
            android:textSize="16sp" />

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/dontCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/dontCode"
        app:layout_constraintEnd_toEndOf="@+id/flexboxLayout2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/flexboxLayout2"
        app:layout_constraintTop_toBottomOf="@+id/flexboxLayout2" />

    <Button
        android:id="@+id/btnSumit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/outfit_bold"
        android:gravity="center"
        android:text="@string/sumit"
        app:layout_constraintEnd_toEndOf="@+id/dontCode"
        app:layout_constraintStart_toStartOf="@+id/dontCode"
        app:layout_constraintTop_toBottomOf="@+id/dontCode" />


</androidx.constraintlayout.widget.ConstraintLayout>